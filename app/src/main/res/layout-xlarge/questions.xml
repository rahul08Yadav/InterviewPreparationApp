<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:id="@+id/question_ll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:background="@drawable/center_layout"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:text="@string/tv_xx"/>
        <TextView
            android:id="@+id/tvyy"
            android:textColor="#000000"
            android:text="@string/tv_yy"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/top_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="73"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvquestion"
            android:padding="15dp"
            android:textColor="#000000"
            android:textSize="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_question"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:padding="15dp"
                    android:id="@+id/tvanswer"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:textSize="40sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_answer" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/center_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonleft"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/left"
             />

        <Button
            android:id="@+id/buttonshow"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/answer_selector"
             />

        <Button
            android:id="@+id/buttonnext"
            android:background="@drawable/right"
            android:layout_width="140dp"
            android:layout_marginLeft="10dp"
            android:layout_height="140dp"
             />
    </LinearLayout>
</LinearLayout>